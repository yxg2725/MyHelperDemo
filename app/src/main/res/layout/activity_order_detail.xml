<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.myhelper.activity.OrderDetailActivity">

    <include layout="@layout/toolbar_layout"></include>



    <LinearLayout
        android:layout_marginTop="?attr/actionBarSize"
        android:background="@color/color_write"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/tv_order_title"
            android:layout_marginTop="30dp"
            android:text="订单核对"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/color_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_marginLeft="6dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="订单日期："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_order_date"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_line_dash_black"
            android:layout_width="match_parent"
            android:layout_height="3dp"></View>
        <View
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_line_dash_black"
            android:layout_width="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_height="3dp"></View>
        <LinearLayout
            android:id="@+id/ll_customer"
            android:layout_marginLeft="6dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="客户："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_customer"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="6dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="订单总金额：￥"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_order_total_price"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_send_price"
            android:layout_marginLeft="6dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="发货总金额：￥"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_send_total_price"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <LinearLayout
            android:layout_marginLeft="6dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="订单状态："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_order_state"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="**************************************************************************"
                android:layout_width="wrap_content"
                android:lines="1"
                android:layout_gravity="center"
                android:textColor="@color/color_black"
                android:layout_height="wrap_content" />
            <TextView
                android:text="订单明细"
                android:padding="8dp"
                android:layout_gravity="center"
                android:textColor="@color/color_black"
                android:background="@color/color_write"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </FrameLayout>


        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:padding="6dp"
            android:background="@color/divide_line_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:text="产品名称"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textColor="@color/color_black"
                android:layout_height="wrap_content" />

            <TextView
                android:text="数量"
                android:textColor="@color/color_black"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />



            <TextView
                android:text="小计"
                android:textColor="@color/color_black"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />


        </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_order_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>




    </LinearLayout>


    <com.example.myhelper.widget.SawtoothBlackView
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/sawtooth"
        />


    <ImageView
        android:visibility="gone"
        android:id="@+id/src_order_state"
        android:layout_marginTop="100dp"
        android:layout_gravity="top|right"
        android:layout_marginRight="20dp"
        android:src="@drawable/ic_finished_translucence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</FrameLayout>
